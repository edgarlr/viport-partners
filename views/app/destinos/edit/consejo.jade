extends ../../layout.jade
block contenido
  div(class="contenido")
    div(class="form-new")
      form(method="POST", action="/home/atractivos/consejos/#{consejo._id}?_method=PUT")
        div(class="form")
          div
            label(for="destino") Destino
            select(id="destino", name="destino", class="form-select")
              each destino in destinos
                option(value="#{destino._id}") #{destino.nombre}
          div
            label(for="title") Consejo
            textarea(id="title", name="title", placeholder="Ej. En los restaurantes se acostumbra a dejar el 15% de propina.", class="form-textarea") #{consejo.title}            
        div
          div(class="botones-inferiores right-align")
            input(type="submit", value="Guardar", class="btn-relleno form-submit")
